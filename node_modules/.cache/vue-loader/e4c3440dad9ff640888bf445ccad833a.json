r\n\r\n    export default {\r\n        name: 'EbookSettingTheme',\r\n        mixins: [ebookMixin],\r\n        methods: {\r\n          setTheme(index) {\r\n            const theme = this.themeList[index]\r\n            this.setDefaultTheme(theme.name).then(() => {\r\n              this.currentBook.rendition.themes.select(this.defaultTheme)\r\n              this.initGlobalStyle()\r\n            })\r\n            saveTheme(this.fileName, theme.name)\r\n          }\r\n        }\r\n    }\r\n</script>\r\n\r\n<style lang=\"scss\" rel=\"stylesheet/scss\" scoped>\r\n    @import \"src/assets/styles/global\";\r\n    .setting-wrapper{\r\n      position: absolute;\r\n      bottom: px2rem(48);\r\n      left: 0;\r\n      z-index: 101;\r\n      width: 100%;\r\n      height: px2rem(90);\r\n      background: white;\r\n      box-shadow: 0 px2rem(-8) px2rem(8) rgba(0, 0, 0, .15);\r\n      .setting-theme {\r\n        height: 100%;\r\n        display: flex;\r\n        .setting-theme-item {\r\n          flex: 1;\r\n          display: flex;\r\n          flex-direction: column;\r\n          padding: px2rem(5);\r\n          box-sizing: border-box;\r\n          .preview {\r\n            flex: 1;\r\n            border: px2rem(1) solid #ccc;\r\n            box-sizing: border-box;\r\n            &.selected {\r\n              box-shadow: 0 px2rem(4) px2rem(6) 0 rgba(0, 0, 0, .2);\r\n            }\r\n          }\r\n          .text {\r\n            flex: 0 0 px2rem(20);\r\n            font-size: px2rem(14);\r\n            color: #ccc;\r\n            @include center;\r\n            &.selected {\r\n              color: #333;\r\n            }\r\n          }\r\n        }\r\n      }\r\n    }\r\n</style>\r\n"]}]}